<Window x:Class="Blackjackkwadraaloef.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackjackkwadraaloef"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="DarkRed">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox
            Margin="10"
            Name="DealerCards"
            Grid.Row="0" Grid.Column="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="4"
            IsReadOnly="True"
            Background="Gray"
            >
        </TextBox>
        <TextBox
            Margin="10"
            Name="PlayerCards"
            Grid.Row="3" Grid.Column="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="4"
            IsReadOnly="True"
            Background="Gray" 
            >
        </TextBox>
        <Viewbox Stretch="Uniform">
            <TextBlock
            Margin="10"
            Grid.Row="0" Grid.Column="0"
            FontSize="44"
            >
            Dealer
        </TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="4" Grid.Column="5" Stretch="Uniform">
            <TextBlock
            Margin="10"
            FontSize="44"
            >
            Player
        </TextBlock>
        </Viewbox>
        <Button
            Margin="20"
            Name="HitButton"
            Grid.Row="2" Grid.Column="4" Click="HitButton_Click"
            Visibility="Collapsed"
            >
            Hit
        </Button>
        <Button
            Margin="20"
            Name="StandButton"
            Grid.Row="2" Grid.Column="1" Click="StandButton_Click"
            Visibility="Collapsed"
            >
            Stand
        </Button>
        <Button
            Margin="20"
            Name="PlayButton"
            Grid.Row="2" Grid.Column="2" Click="PlayButton_Click"
           Grid.ColumnSpan="2"
            >
            Play
        </Button>
        <Button
            Margin="20"
            Name="SplitButton"
            Grid.Row="3" Grid.Column="0"
            Visibility="Collapsed"
            Click="SplitButton_Click"
            >
            Split
        </Button>
        <Button
            Margin="20"
            Name="DoubleButton"
            Grid.Row="4" Grid.Column="0"
            Visibility="Collapsed"
            Click="DoubleButton_Click"
            >
            Double Down
        </Button>
        <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform">
            <TextBlock
            Margin="10"
            Name="DealerScore"
            FontSize="44"
            HorizontalAlignment="Center"
            >
            0
        </TextBlock>
        </Viewbox>

        <Grid
            Grid.Row="3" Grid.Column="5"
            Visibility="Collapsed"
            Name="Fourthgrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Viewbox Grid.Column="1" Stretch="Uniform">
            <TextBlock
            Margin="10"
            Name="PlayerScore1"
            Grid.Column="1"
            FontSize="44"
            HorizontalAlignment="Center"
            >
            0
            </TextBlock>
            </Viewbox>
            <Viewbox Stretch="Uniform">
                <TextBlock
            Margin="10"
            Name="PlayerScore2"
            FontSize="44"
            HorizontalAlignment="Center"
            >
            0
            </TextBlock>
            </Viewbox>

        </Grid>
        <Viewbox Grid.Row="3" Grid.Column="5" Stretch="Uniform">
            <TextBlock
            Margin="10"
            Name="PlayerScore"
            FontSize="44"
            HorizontalAlignment="Center"
            >
            0
        </TextBlock>
        </Viewbox>
        <Viewbox Grid.Row="2" Grid.Column="5" Stretch="Uniform">
            <TextBlock
            Margin="10"
            Name="Result"
            
            FontSize="38"
            HorizontalAlignment="Center"
            Visibility="Collapsed"
            >
            Started
        </TextBlock>
        </Viewbox>

        <Grid
            Grid.Row="3" Grid.Column="0"
            Visibility="Visible"
            Name="secondgrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button
                Margin="5"
                Name="plusten"
                Grid.Row="0" Grid.Column="0" Click="plusten_Click"
                >
                +10
            </Button>
            <Button
                Margin="5"
                Name="plusfifty"
                Grid.Row="0" Grid.Column="1" Click="plusfifty_Click"
                >
                +50
            </Button>
            <Button
                Margin="5"
                Name="plushundred"
                Grid.Row="0" Grid.Column="2" Click="plushundred_Click"
                >
                +100
            </Button>
            <Button
                Margin="5"
                Name="minusten"
                Grid.Row="1" Grid.Column="0" Click="minusten_Click"
                >
                -10
            </Button>
            <Button
                Margin="5,5,5,5"
                Name="minusfifty"
                Grid.Row="1" Grid.Column="1" Click="minusfifty_Click"
                >
                -50
            </Button>
            <Button
                Margin="5"
                Name="minushundred"
                Grid.Row="1" Grid.Column="2" Click="minushundred_Click"
                >
                -100
            </Button>

        </Grid>
        <Grid
            Grid.Row="4" Grid.Column="0"
            Visibility="Visible"
            Name="thirdgrid"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Viewbox Stretch="Uniform">
                <Label
                Margin="5"
                FontSize="18"
                >
                Money available :
            </Label>
            </Viewbox>
            <TextBox
                Margin="5"
                Name="availablemoney"
                Grid.Row="1"
                FontSize="18"
                IsReadOnly="True"
                >
                100
            </TextBox>
        </Grid>
        <Viewbox Grid.Row="2" Grid.Column="0" Stretch="Uniform">
            <TextBlock
            Margin="10"
            Name="Wager"
            
            FontSize="38"
            Visibility="Visible"
            TextAlignment="Center"
            >
            Wager :
        </TextBlock>
        </Viewbox>
        
        <TextBox
            Margin="20"
            Name="Moneybox"
            Grid.Row="2" Grid.Column="1"
            FontSize="20"
            Visibility="Visible"
            IsReadOnly="True"
            >
            0
        </TextBox>

        <TextBox
            Margin="10"
            Background="Gray"
            Name="split1"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2" Grid.RowSpan="2"
            Visibility="Collapsed"
            IsReadOnly="True"
            IsEnabled="False"
            >
            
        </TextBox>
        <TextBox
            Margin="10"
            Background="Gray"
            Name="split2"
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="2" Grid.RowSpan="2"
            Visibility="Collapsed"
            IsReadOnly="True"
            IsEnabled="False"
            >

        </TextBox>


        <Button
            Margin="20"
            Name="newgamebttn"
            Grid.Row="2"
            Grid.Column="4"
            Visibility="Visible" Click="newgamebttn_Click"
            >
            New Game
        </Button>
        <Button
            Margin="20"
            Name="HitsplitButton"
            Grid.Row="2" Grid.Column="4" Click="HitsplitButton_Click"
            Visibility="Collapsed"
            >
            Hit
        </Button>
        <Button
            Margin="20"
            Name="HitsplitsecondButton"
            Grid.Row="2" Grid.Column="4" Click="HitsplitsecondButton_Click"
            Visibility="Collapsed"
            >
            Hit
        </Button>
        <Button
            Margin="20"
            Name="StandsplitButton"
            Grid.Row="2" Grid.Column="1" Click="StandsplitButton_Click"
            Visibility="Collapsed"
            >
            Stand
        </Button>
        <Button
            Margin="20"
            Name="StandsplitsecondButton"
            Grid.Row="2" Grid.Column="1" Click="StandsplitsecondButton_Click"
            Visibility="Collapsed"
            >
            Stand
        </Button>


    </Grid>
    
</Window>
